<%- include('partials/head.ejs', {title: 'Home'}) %>
<body>
  <%- include('partials/navbar.ejs') %>
  <%- include('partials/pageHeader.ejs', {pageTitle: 'Detail Student'}) %>

<div class="container">
  <section >
    
    <form  style="margin: auto; width: 70%;" action="/user/<%= data.id %>/update" method="POST" >
      <p style="margin: auto; text-align: center; width: 200px; height: 200px;"> <img style="width: 200px; height: 200px; " src="<%= data.photo %>" alt=""></p>
      <table style="width: 100%;">
        <tr>
          <th><label for="firstName">firstName</label></th>
          <th><label for="lastName">lastName</label></th>
        </tr>
        <tr>
          <td><input style="width: 80%; " type="text" name="firstName" value="<%= data.firstName %>" ></td>
          <td><input style="width: 80%; " type="text" name="lastName"  value="<%= data.lastName %>"></td>
        </tr>
      </table>
      
      <br>
      <label for="gender">gender</label><br>
      <input style="width: 100%;" type="text" name="gender"  value="<%= data.gender %>">
      <br>
      <label for="email">email</label><br>
      <input style="width: 100%;" type="text" name="email"  value="<%= data.email %>">
      <br>
      <label for="nik">Phone</label><br>
      <input style="width: 100%;" type="text" name="phone"  value="<%= data.phone %>">
      <br>
      
      <label for="photo">photo</label><br>
      <input style="width: 100%;" type="text" name="photo"  value="<%= data.photo %>">
      <br><br>
      
      <button type="submit" >Submit</button>
      
    </form>
   
  </section>
<br><br><br>
  
</div>

</body>
</html>